<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="AutoDiscovery.ADWindow" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:AutoDiscovery="clr-namespace:AutoDiscovery"
	Title="AutoDiscovery"
	Height="368"
	Width="579">
	<Grid>
		<TextBox
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="20,15,64,13"
			x:Name="discovery_results"
			FontSize="10">
			<TextBox.BorderBrush>
				<LinearGradientBrush
					StartPoint="0,0"
					EndPoint="0,20"
					MappingMode="Absolute">
					<LinearGradientBrush.GradientStops>
						<GradientStop
							Color="#FF000000"
							Offset="0.05" />
						<GradientStop
							Color="#FFE2E3EA"
							Offset="0.07" />
						<GradientStop
							Color="#FFE3E9EF"
							Offset="1" />
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</TextBox.BorderBrush>
		</TextBox>
		<Button
			Content="Start"
			RenderTransformOrigin="0.375,-0.2826"
			Height="23"
			Width="48"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,15,8,0"
			x:Name="button1"
			Click="Start_Click" />
	</Grid>
</Window>